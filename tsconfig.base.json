{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react-jsx",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@elephant-games/auth": ["libs/auth/src/index.ts"],
      "@elephant-games/chemistry": ["libs/chemistry/src/index.ts"],
      "@elephant-games/geopolitical": ["libs/geopolitical/src/index.ts"],
      "@elephant-games/game": ["libs/game/src/index.ts"],
      "@elephant-games/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
